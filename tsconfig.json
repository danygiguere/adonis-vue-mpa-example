{
  "strict": false,
  "noUnusedLocals": true,
  "allowJs": true,
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "build", ".eslintrc.js", "webpack.mix.js"],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/lucid",
      "@adonisjs/auth",
      "@adonisjs/shield"
    ]
  }
}
